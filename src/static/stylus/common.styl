IconBig = //54px 
  position absolute
  width 56px
  height 56px
  background-color corange1
  cursor pointer
  border-radius 30px
  border 2px solid rgba(0,0,0,0)
  & > svg 
    width 30px
    height 30px
    position absolute
    left 12px
    top 12px
    & > :nth-child(2)
      fill cwhite1
  &:hover,  
  &:focus
    background-color cwhite1
    border-color corange2
    & > svg > :nth-child(2) 
      fill corange2

IconMedium = //42px (topbar)
  position absolute
  width 42px
  height 42px
  cursor pointer
  box-sizing border-box
  & > svg 
    width 24px
    height 24px
    position absolute
    left 8px
    top 8px
    & > :nth-child(2)
      fill cblack1
IconSmall = //30px (topbar)
  position absolute
  width 30px
  height 30px
  cursor pointer
  border 2px solid rgba(0,0,0,0)
  box-sizing border-box
  & > svg 
    width 24px
    height 24px
    position absolute
    left 1px
    top 1px
    & > :nth-child(2)
      fill cblack1
  &:hover
    border 2px solid corange2
    background-color cwhite1




