@require 'common.styl'


Underline = 
    position absolute
    content ''
    bottom 0
    left 0
    width 100%
    height 3px
    background-color cblack1
    border-radius 3px

.topbar
    position absolute 
    left 0px
    top 0px
    width 100vw
    height 48px
    box-shadow shadow1
    z-index 300
    text-align center
    user-select none
    font-weight 500
    @media all and (max-width 560px)
        &.displayMenu
            background-color rgba(255,255,255,0.8)
            & > :nth-child(1) > :nth-child(2)
                display block
                & > *:hover
                    color corange1
            & > :nth-child(2):hover
                color corange1
                &:after 
                    display none
    @media all and (min-width 561px) and (max-width 1010px)
        text-align left
    & > div
        display inline-block
        cursor pointer

    & > :nth-child(1) //left items
        position absolute
        left 10px 
        top 0px
        @media all and (min-width 561px) and (max-width 1010px)
            position relative
            z-index 301
        @media all and (max-width 560px)
            left 0
        & > :nth-child(1) //Icon gamburger
            display none
            left 3px
            top 3px
            border-radius 6px
            border 2px solid rgba(0,0,0,0)
            {IconMedium}
            @media all and (max-width 560px)
                display block
                &:hover
                    border 2px solid corange1
                    background-color cwhite1
        & > :nth-child(2) //Container links
            display inline-block
            & > *
                position relative
                display inline-block
                box-sizing border-box
                padding 12px
                font-size 20px
                height 48px
                width auto
                &:hover:after
                    {Underline}
            @media all and (max-width 560px)
                display none
                position absolute
                left 0px
                top 48px
                width 100vw
                & > *
                    display block
                    background-color white06
                    backdrop-filter: blur(10px)
                    border-top 1px solid 
                    border-color cblack3
                    &:hover
                        &:hover:after
                            display none
                & > :last-child
                    border-bottom-left-radius 6px
                    border-bottom-right-radius 6px
                    border-bottom 1px solid 
                    border-color cblack3


    & > :nth-child(2) //center item (namual + game name)
        position relative
        padding 12px
        font-size 20px
        height 100%
        box-sizing border-box
        cursor pointer
        @media all and (max-width 760px)
            & > span:nth-of-type(1)
                display none
        &:hover:after
            {Underline}

    & > :nth-child(3) //user settings
        position absolute
        right 4px
        top 0
        height 48px
        min-width 42px
        padding 4px 48px 0px 8px
        box-sizing border-box
        cursor pointer
        text-align right
        &:hover:after
            {Underline}
        @media all and (max-width 1010px)
            padding 0
            & > :nth-child(1),
            & > :nth-child(2)
                display none
            &:hover:after
                display none
        & > :nth-child(1) //userId
            margin-top 4px
            font-weight 800
            font-size 12px
        & > :nth-child(2) //userName
            font-size 16px
            text-overflow ellipsis
            text-transform uppercase
        & > :nth-child(3) //Icon settings
            right 0
            top 3px
            border-radius 6px
            {IconMedium}
            border 2px solid rgba(0,0,0,0)
            @media all and (max-width 1010px)
                &:hover
                    background-color cwhite1
                    border 2px solid corange1
        