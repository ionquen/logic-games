@require 'common.styl'
.page
    position fixed
    left 0
    bottom 0
    display flex
    width 100vw 
    height calc(100% - 48px)
    overflow hidden
    background-color white06
    & ~ canvas
        position absolute
        left 0px
        top 0px
        width 100vw
        height 100vh
        z-index -10