@require 'common.styl'

.roomInfo
    display block
    position absolute
    top calc(50% - 250px) 
    left calc(50% - 400px)
    width 800px
    height 500px
    border-radius 0px
    background-color cwhite3
    box-shadow shadow2
    @media all and (max-width 810px)
        width calc(100vw - 10px)
        left 5px
        top 5px
        height calc(100vh - 68px)
    & > :nth-child(1) //header
        position relative
        width auto
        padding 20px   
        height 32px
        text-align left
        & > div
            font-size 20px
            padding 3px

    & > :nth-child(2) //form block
        height calc(100% - 72px)
        @media all and (max-width 810px)
            display flex
            flex-direction column
        & > :nth-child(1) //settings field
            display flex
            flex-direction row
            height calc(100% - 60px)
            overflow scroll
            margin 0px 10px
            scrollbar-width thin
            @media all and (max-width 489px)
                height calc(100% - 120px)
            @media all and (max-width 810px)
                flex 10 1
                flex-direction column
            & > :nth-child(1)
                position relative
                flex 0 0 240px
                margin 0px 10px 0px 10px

            & > :nth-child(2)
                flex 1 1
                margin 0px 10px 0px 10px

            & > div
                &:before
                    display none
                    content ''
                    width calc(100% - 10px)
                    height 1px
                    background-color cblack1
                    margin 0px auto 10px auto
                    @media all and (max-width 810px)
                        display block
                & > *
                    margin-bottom 10px

            & > :nth-child(3)
                flex 1 1
                margin 0px 10px 0px 10px
                & > :first-child
                    margin-top 10px
                & > div
                    margin 5px
                    color cblack2
                    & > div
                        display inline-block
                    & > :nth-child(2) 
                        margin-left 5px
                & > .disconnected
                    color cgray3
                    
        & > :nth-child(2) //buttons container
            height 60px
            display flex
            flex-wrap wrap
            @media all and (max-width 810px)
                flex 1 0
                height auto
            & > *
                margin 10px 0px 10px 20px
                width 240px
            