@require 'common.styl'

.chat
    display flex
    flex-direction column
    flex 0 0 340px
    position relative
    width 340px
    height 100%
    background-color cwhite1
    box-shadow shadow1
    z-index 201
    & > :nth-child(1)//header
        flex 0 0 42px
        display flex
        border-bottom 1px solid  oshadow
        & > :nth-child(1),
        & > :nth-child(3)
            flex 0 0 42px
            height 100%
            position relative
            & > :nth-child(1)
                left 6px
                top 6px
                border-radius 6px
                {IconSmall}
                    
        & > :nth-child(1) > :nth-child(1) //Анимация ротации кнопки смены типа чата
            & > svg
                transition 0.5s
            & > .global
                transform rotate(180deg)
        & > :nth-child(2)//title
            flex 1 1 232px
            color cblack2
            position relative
            & > :nth-child(1),
            & > :nth-child(2)
                text-transform uppercase
                position absolute
                left 0
                font-size 14px
                transition 0.5s
                opacity 0
                text-align center
                width 100%
                &.selected
                    top 12px
                    opacity 1
            & > :nth-child(1)
                top -20px
            & > :nth-child(2)
                top 40px
            & > :nth-child(3)
                text-transform lowercase
                position absolute
                left 10px
                bottom 0px
        & > :nth-child(3)
            visibility hidden
            @media all and (max-width 1280px)
                visibility visible
            
            
    & > :nth-child(2)//body (messages)
        height 100%
        overflow-y scroll
        scrollbar-width thin
        & > div
            padding 5px 18px
            font-size 13px
        & > .system
            color cblack2
        & > :not(.system)
            & > :nth-child(1),
            & > :nth-child(2)
                color cblack3
                font-weight 600
            & > :nth-child(3)
                color cblack4
    & > :nth-child(3)//input message
        padding 14px 14px
        box-sizing border-box

    @media all and (max-width 1280px)
        display none
        position absolute
        height calc(100vh - 48px)
        top 0px
        right 0px
    @media all and (max-width 500px)
        width 100vw
    &.chatDisplay
        @media all and (max-width 1280px)
            display flex
            
.chatStateBtn
    display none
    bottom 80px
    right 20px
    z-index 200
    {IconBig}
    &:hover 
        background-color corange2
    @media all and (max-width 1280px)
        display block
