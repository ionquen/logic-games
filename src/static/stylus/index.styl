@import url('https://rsms.me/inter/inter.css');
@require 'common.styl'
::-webkit-scrollbar
    width 4px
    height 4px

::-webkit-scrollbar-thumb
    background none
    border-radius 3px
    &:hover
        background cgray1
::-webkit-scrollbar-corner
    background none

*
    padding 0
    margin 0
    font-family Inter, sans-serif
body
    margin 0
    padding 0
    font-family Inter, sans-serif
    overflow hidden

a
    display block
    text-decoration none
    color #000
    font-family Inter, sans-serif

input
    background-color rgba(0,0,0,0)
    outline none
    border none
    text-indent 10px
    &::placeholder
        color cblack4
        text-indent 10px
body svg 
    position relative
    width auto
    left auto 
    bottom auto
