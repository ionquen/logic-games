@require 'common.styl'

.input
    position relative
    height 42px
    border-radius 6px
    background-color cwhite1
    box-sizing border-box
    border 2px solid rgba(0,0,0,0)
    font-size 15px
    &:focus-within
        border 2px solid corange2
    & > input
        margin-top 4px
        height 32px
        width calc(100% - 44px)
        text-indent 10px
        &:last-child
            width 100%
    & > label //icon after textarea
        display block
        position absolute
        right 6px
        top 5px
        height 30px
        width 30px
        cursor pointer
        border-radius 6px
        & > input
            display none
        & > svg 
            position absolute
            top 3px
            left 3px
            width 24px
            height 24px
        &:hover > svg > :nth-child(2)
            fill corange2
.select 
    position relative
    height 42px
    border-top-left-radius 6px 
    border-top-right-radius 6px 
    font-size 15px
    width 100%
    padding 10px   
    cursor pointer
    background-color cwhite1
    text-align left
    font-weight 300
    outline none
    border 2px solid rgba(0,0,0,0)
    & > option
        background-color cwhite1
    &:focus-within
        border 2px solid corange1

.number
    position relative
    min-height 42px
    box-sizing border-box
    padding 12px 0
    font-size 15px
    label 
        cursor pointer
        input
            background-color cwhite1
            border-radius 6px
            text-align right
            position absolute
            width 63px
            height 42px
            left 0
            top 50%
            transform translate(0, -50%)
            box-sizing border-box
            border 2px solid rgba(0,0,0,0)
            &:focus
                border 2px solid corange2
        div
            margin-left 73px

.checkbox
    position relative
    padding 6px 0 6px 0
    label 
        cursor pointer
        input 
            position absolute
            left 15px
            top 50%
            transform translate(0, -50%)
            border 2px solid rgba(0,0,0,0)
            &:focus
                outline 2px solid corange2
        div
            margin-left 54px
.button
    background-color corange1
    font-size 14px
    font-weight 600
    cursor pointer
    padding 3px 0px
    margin-right 18px
    text-align center
    border-radius 6px 
    outline none
    border 2px solid rgba(0,0,0,0)
    box-sizing border-box
    &:focus
        border 2px solid corange2
        background-color cwhite1
    &:hover
        background-color corange2
    &:disabled
        background-color cgray3
