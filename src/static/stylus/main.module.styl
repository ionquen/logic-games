@require 'common.styl'
.main
    height 100vh
    overflow scroll
    background-color #000
    scrollbar-width thin
.header
    position absolute
    left 6vw
    top 6vw
    color #fff
    width 35vw
    z-index 100
    animation headerLeftA 2s
    @media all and (max-width 1160px)
        width calc(100vw - 60px)
        position relative
        top auto 
        left auto
        margin 30px
    & > :nth-child(1)
        font-size 56px
        line-height 50px
        font-weight 800
        @media all and (max-width 1160px)
            font-size 34px
            line-height 30px
    & > :nth-child(2)
        margin-top 20px
        font-size 28px
        line-height 28px
        @media all and (max-width 1160px)
            font-size 24px
@keyframes headerLeftA {
    0% {
        margin-left -100px
        opacity 0
    }
}
.img
    background-color #000
    position absolute
    bottom 250px
    right 0px
    width 65vw
    overflow hidden
    @media all and (max-width 600px)
        height 400px
    @media all and (max-width 1160px)
        width 100vw
        position relative
        left auto 
        bottom auto
    & > svg 
        margin-bottom -5px
        @media all and (max-width 600px)
            position absolute
            width 600px
            left calc(50vw - 300px)
            bottom 0px
.catalog
    white-space nowrap
    width calc(100vw - 300px)
    height 250px
    background-color #fff
    position absolute
    bottom 0px
    right 0px
    box-sizing border-box
    padding 0px 126px
    border-top-left-radius 100px
    @media all and (max-width 700px)
        padding 0
    @media all and (max-width 1160px)
        width 100vw
        position relative
        height auto
        border-top-left-radius 0px
    & > div
        overflow scroll
        @media all and (max-width 1160px)
            white-space normal
            text-align center
        & > div
            display inline-block
            margin 0px 5px
            width 208px
            position relative
            & > :nth-child(1) //item
                height 250px
                & > :nth-child(1)
                    width 100% 
                    font-weight 700
                    text-align center
                    font-size 20px
                    height 42px
                    line-height 42px
                & > :nth-child(2)
                    height 208px
    & > .arrowRight, 
    & > .arrowLeft
        display block
        position absolute
        width 60px
        height 60px
        cursor pointer
        & > :nth-child(2)
            transition 1s fill
        &:hover > :nth-child(2) 
            fill red
        @media all and (max-width 1160px)
            display none
    & > .arrowLeft
        left 30px
        bottom calc(50% - 30px)
    & > .arrowRight
        right 30px
        bottom calc(50% - 30px)

.footer
    color #fff
    position absolute
    bottom 20px
    left 20px
    width 260px
    height 130px
    box-sizing border-box
    padding 20px 15px
    animation footerDownA 2s 
    @media all and (max-width 1160px)
        width 100vw
        position relative
        text-align center
        left auto 
        bottom auto
    & > div
        margin-top 5px 
    &:before
        display block
        position absolute
        left 0
        top 0
        border-radius 5px
        content ''
        height 5px
        width 100%
        background-color #fff
        @media all and (max-width 1160px)
            top 10px 
            left 10px 
            width calc(100% - 20px)
    
@keyframes footerDownA {
    0% {
        bottom -100px
        opacity 0
    }
}   